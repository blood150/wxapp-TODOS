.container {
	border: 1rpx solid #ccc;
}
.nav {
	border: 1rpx solid #ccc;
	border-radius: 10rpx;
	box-shadow: 0 0 5rpx #ccc;
	margin: 20rpx;
	padding: 10rpx;
	display: flex;
	align-items: center;
}
.nav image {
	width: 41px;
	height: 41px;
	margin-right: 10rpx;
}
.nav input {
	flex: 1;
}
.info {
	border: 1rpx solid #ccc;
	border-radius: 10rpx;
	box-shadow: 0 0 5rpx #ccc;
	margin: 20rpx;
}
.info .item {
	display: flex;
	padding: 20rpx;
	border-bottom: 1rpx solid #ccc;
}
.info .item:last-child {
	border-bottom: 0;
}  
.info .item text {
	flex: 1;
	margin-left: 10rpx;
	font-size: 32rpx;
}
.info .item.active text {
	color: #888;
	text-decoration: line-through;
}
.footer {
	display: flex;
	justify-content: space-around;
	margin: 20rpx;
	font-size: 32rpx;
}